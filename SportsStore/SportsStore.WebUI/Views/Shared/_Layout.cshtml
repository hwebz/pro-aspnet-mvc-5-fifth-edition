<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <style>
        .navbar-right {
            float: right !important;
            margin-right: 15px;
            margin-left: 15px;
        }
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            @*@Html.ActionLink("Sports Store", "List", "Product", new { area = "" }, new { @class = "navbar-brand" })*@
            <a href=@Url.Action("List", "Product") class="navbar-brand">
                <span class="hidden-xs">Sports Store</span>
                <div class="visible-xs">Sports</div>
                <div class="visible-xs">Store</div>
            </a>
            @Html.Action("Summary", "Cart")
        </div>
    </div>


    <div class="container body-content mt-4">
        <div class="row">
            <div class="col-xs-12 col-sm-4 col-md-3 hidden-xs">
                @Html.Action("Menu", "Nav")
            </div>
            <div class="col-xs-12 visible-xs">
                @Html.Action("Menu", "Nav", new { horizontalLayout = true })
            </div>
            <div class="col-xs-12 col-sm-8 col-md-9">
                @RenderBody()
            </div>
        </div>
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My SportsStore Application</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.12.4.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>