@model IEnumerable<string>

<div class="list-group">
    @Html.ActionLink("Home", "List", "Product", null, new { @class="list-group-item list-group-item-action" + (ViewBag.SelectedCategory == null ? " active" : "") })
    @foreach (var category in Model)
    {
        @Html.RouteLink(category, new
        {
            controller = "Product",
            action = "List",
            category = category,
            page = 1
        }, new {
            @class = "list-group-item list-group-item-action" + (category == ViewBag.SelectedCategory ? " active" : "")
        })
    }
</div>
